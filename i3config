exec --no-startup-id i3-msg 'workspace $w2; exec google-chrome'
exec gnome-sound-applet
exec --no-startup-id emacs --daemon
exec --no-startup-id owncloud
exec --no-startup-id slack
#needs a sleep to give time for the daemon to start
